<div>
  <a href="/dashboard/newpost/"><button id="new-post" class="button is-pulled-right">Create a new post</button></a>
  <h2 class="title">Dashboard</h2>
  <hr>
{{#if posts.length}}
</div>

{{#each posts as |post|}}

